green = #036564

html, body
  height 100%
  width 100%
  background #111
  color #F1F0EB
  font-family 'Open Sans', sans-serif
  font-size 14px

/* loader */
#loader
  width 100%
  height 100%
  position relative

  p
    text-align center
    position relative
    top 50%
    transform translateY(-50%)

/* canvas */
#canvasContainer
  z-index 1

  canvas
    display block

/* links */
a
  color lighten(green, 10%)
  //text-decoration none

  &:hover
    color green

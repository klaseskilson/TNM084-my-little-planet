/* controls */
// variables
padding = 15px
gray = #F1F0EB
blue = #385573
red = #FF704A

#controls
  z-index 2
  position absolute
  top 0
  left 0
  width 100%
  height 100%
  max-width 300px
  background rgba(#111, .5)

  &.hidden
    height auto

  header
    background red
    border-bottom none

.group
  border-bottom 1px solid gray
  padding padding
  margin 0 0 padding

.input
  margin (padding/3) 0
  display flex

  .key
    font-size 14px
    line-height 26px
    flex 2

  input.single
    background rgba(white, 0.1)
    border none
    color gray
    font-size 14px
    padding (padding/3)
    text-align right
    flex 1

h1, h2, .group .key
  margin 0
  padding 0
  font-weight normal
  text-transform uppercase
  letter-spacing 0.05em

h1
  font-size 20px

h2
  font-size 16px


